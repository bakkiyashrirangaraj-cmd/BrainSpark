# BrainSpark Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Database Configuration
# ======================
DB_USER=brainspark
DB_PASSWORD=your_secure_password_here

# For Cloud SQL in production:
# DATABASE_URL=postgresql://user:pass@/brainspark?host=/cloudsql/PROJECT:REGION:INSTANCE

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# API Keys (REQUIRED)
# ======================
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api-your-key-here

# ======================
# Authentication
# ======================
JWT_SECRET=generate-a-secure-random-string-here-at-least-32-characters

# Firebase (optional - for OAuth)
# FIREBASE_API_KEY=
# FIREBASE_AUTH_DOMAIN=
# FIREBASE_PROJECT_ID=

# ======================
# Application URLs
# ======================
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Production URLs:
# APP_URL=https://brainspark.siggmatreders.com
# API_URL=https://api.brainspark.siggmatreders.com

# ======================
# Environment
# ======================
ENVIRONMENT=development
# Options: development, staging, production

# ======================
# GCP Configuration (for deployment)
# ======================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-south1

# ======================
# Email (optional)
# ======================
# SENDGRID_API_KEY=
# FROM_EMAIL=noreply@brainspark.siggmatreders.com

# ======================
# Analytics (optional)
# ======================
# MIXPANEL_TOKEN=
# SEGMENT_WRITE_KEY=
